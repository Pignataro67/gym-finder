  <div class="container">
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col-lg-4 sign-in-portal">

  <h2>Please Login!</h2>
    <% if flash[:message] %>
      <%= flash[:message] %>
      <%end%>

      <%= form_tag(sessions_path) do %>

      <div class="form-group">
        <%= label_tag 'Username' %><br>
        <%= text_field_tag :user_name %> 
      </div>

      <div class="form-group">
        <%= label_tag 'Email' %><br>
        <%= text_field_tag :email %>
      </div>

      <div class="form-group">
        <%= label_tag 'Password' %><br>
        <%= password_field_tag :password %>
      </div>

      <div class="actions">
        <%= submit_tag 'Login' %>
      </div>
    <%end%>
      </div>
    <div class="col-lg-4"></div> 
  </div>
</div>
    