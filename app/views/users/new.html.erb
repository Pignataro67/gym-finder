<h1>Signup</h1>
<%= render partial: '/gyms/render_errors', locals: {model_name: @user} %>

<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :user_name %>
    <%= f.text_field :user_name, placeholder: "Please create a username!" %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "Please register with your email!" %>
  </p>

  <p>
    <h3>Create an Admin account to post Gyms, non admins can write reviews.</h3>
    <%= f.label "Admin?" %>
    <%= f.select(:admin, options_for_select([['Yes', true], ['No', false]], {:selected => @user.admin}), :prompt => "Select") %>
  </p>
  
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  
  <h2><%= f.submit %></h2>

<%end%>