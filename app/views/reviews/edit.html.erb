<% if flash[:message] != nil %>
<%= flash[:message] %>
<%end%>

<% form_for(@review) do |f| %>
<h1>Write a Review!</h1>
<p>
  <%= f.label :class_rating %>
  <%= f.select(:class_rating, options_for_select((1..3),
  {:selected => @review.class_rating}), :prompt => "Select") %>
</p>

<p>
  <%= f.label :personal_training_rating %>
  <%= f.select(:personal_training_rating, options_for_select((1..3),
  {:selected => @review.personal_training_rating}), :prompt => "Select") %>
</p>

<p>
  <%= f.label :cleanliness_rating %>
  <%= f.select(:cleanliness_rating, options_for_select((1..3),
  {:selected => @review.cleanliness_rating}), :prompt => "Select") %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_area :description, size: "30x10" %>
</p>

<p>
  <%= f.label :complete_name %>
  <%= f.text_field :complete_name %>
</p>

<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :gym_id, :value => @review.gym.id %>

<p><%= f.submit %></p>
<%end%>


