<div class="page-header">
    <h1>Gym Finder</h1>
    <nav class="navbar navbar-default">
      <div class="container-fluid">

      <ul class="nav nav-pills">
        <li><%= link_to "Home", root_path, {:id=>"home-button"} %></li> 

        <% if logged_in? %>
          <p class="navbar-text navbar-right">Ciao <%= current_user.user_name %>! </p>
          <li><%= link_to "Log-out", logout_path%></li>
          <li><%= link_to "Your Profile", user_path(current_user), {:id => "user-profile"}%></li>
          <li><a id="list_gyms">Gyms</a></li>
          <% if is_admin? %>
          <li><%= link_to "Add Gym", new_user_gym_path(current_user)%></li>
        <%end%>
        <%else%>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Login in with Github', '/auth/github' %></li>
          <li><%= link_to 'Signup', signup_path %></li>
          
        <%end%>
      </ul>
      </div>
    </nav>
</div>